@model ProyectoColegio.Models.Login

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/Login.css?v=1.0" />

</head>
<body>
    <div class="form-body">
        <img src="" alt="" />
        <p class="text">Nombre Del Colegio</p>
        <p class="text">Florencia - Caquetá</p>
        <form asp-action="Index" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserName" placeholder="Nombre De Usuario" />
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="Password" placeholder="Contraseña" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
        </form>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
