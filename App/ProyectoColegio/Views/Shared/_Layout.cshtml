@model ProyectoColegio.Models.Login

@{
    <!--ViewData["Title"] = "Index";--->
    ViewData["Title"] = "CargarCSV";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoColegio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoColegio.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        if (ViewData["Title"].Equals("CargarCSV"))
        {
            <head>
                <!-- Configuración del documento -->
                <meta charset="UTF-8"> <!-- Establece la codificación de caracteres a UTF-8 -->
                <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Configuración de la vista en dispositivos móviles -->
                <link rel="stylesheet" href="~/css/EstiloMenu.css"> <!-- Enlace al archivo de estilos CSS externo -->
                <script src="https://kit.fontawesome.com/f3f65ff77b.js" crossorigin="anonymous"></script> <!-- Enlace al kit de Font Awesome para íconos -->
            </head>

            <body>

                <nav>
                    <!-- Barra de navegación -->
                    <ul>
                        <!-- Lista de elementos de navegación -->
                        <li><a href="#inicio" class="icon-link">Estudiante</a></li>
                        <!-- Enlace a la sección "Inicio" con ícono de graduación para Estudiante -->
                        <li><a href="#nosotros" class="icon-link">Horario</a></li>
                        <!-- Enlace a la sección "Nosotros" con ícono de calendario para Horario -->
                        <li><a href="#servicios" class="icon-link">Docente</a></li>
                        <!-- Enlace a la sección "Servicios" con ícono de pizarra para Docente -->
                        <li><a href="#contacto" class="icon-link">Sede</a></li>
                        <!-- Enlace a la sección "Contacto" con ícono de tienda de campaña para Sede -->
                        <li><a href="#contacto" class="icon-link">Asignatura</a></li>
                        <!-- Enlace a la sección "Contacto" con ícono de libro para Asignatura -->
                        <li><a href="#contacto" class="icon-link">Carnet</a></li>
                        <!-- Enlace a la sección "Contacto" con ícono de tarjeta de identificación para Carnet -->
                        <li><a href="#contacto" class="icon-link">Certificado</a></li>
                        <!-- Enlace a la sección "Contacto" con ícono de sello para Certificado -->
                        <li><a href="#contacto" class="icon-link">Salir</a></li>
                        <!-- Enlace a la sección "Contacto" con ícono de flecha para Salir -->
                    </ul>
                    <img src="Escudo.png" alt="Logo" class="logo">
                    <!-- Imagen del logo de la institución -->
                </nav>

            </body>
        }
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <!--
        <div class="container">
            &copy; 2023 - ProyectoColegio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        -->
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
